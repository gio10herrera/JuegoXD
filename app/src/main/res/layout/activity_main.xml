<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.confix.juegoxd.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/tricki"
            style="@android:style/Widget.Button.Toggle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TRIQUI"
            android:textSize="36sp"
            android:textStyle="bold"
            android:background="@color/triqui"/>

        <Button
            android:id="@+id/rompecabeza"
            style="@android:style/Widget.Button.Toggle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ORDENAR NUMEROS"
            android:textSize="36sp"
            android:textStyle="bold"
            android:background="@color/rompecabeza"
            />

        <Button
            android:id="@+id/about"
            style="@android:style/Widget.Button.Toggle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ACERCA DE"
            android:textSize="36sp"
            android:textStyle="bold"
            android:background="@color/about"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
